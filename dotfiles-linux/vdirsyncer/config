# vim:filetype=dosini

[general]
status_path = "~/.config/vdirsyncer/status/"

################################################################################
# Calendar
################################################################################
[pair outlook_work]
a = "outlook_work_local"
b = "outlook_work_remote"
collections = null
conflict_resolution = "b wins"
metadata = ["color", "displayname", "description", "order"]

[storage outlook_work_local]
type = "filesystem"
path = "~/.local/share/calendar/outlook_work/"
fileext = ".ics"
read_only = false

[storage outlook_work_remote]
type = "caldav"
url.fetch = ["shell", "bw-cli-get Calendar MicrosoftWork"]
username.fetch = ["shell", "bw-cli-get Username MicrosoftWork"]
password.fetch = ["shell", "bw-cli-get password MicrosoftWork"]
read_only = false

################################################################################
# Calendar
################################################################################
[pair outlook_personal]
a = "outlook_personal_local"
b = "outlook_personal_remote"
collections = null
conflict_resolution = "b wins"
metadata = ["color", "displayname", "description", "order"]

[storage outlook_personal_local]
type = "filesystem"
path = "~/.local/share/calendar/outlook_personal/"
fileext = ".ics"
read_only = false

[storage outlook_personal_remote]
