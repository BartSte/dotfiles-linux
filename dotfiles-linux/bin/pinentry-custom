#!/usr/bin/env bash

set -eou pipefail

# Use to checkout stdou of pinentry
# pinentry-curses "$@" 2>&1 | tee /tmp/pinentry.log

command_exists() {
    command -v "$1" >/dev/null 2>&1
}

get_caller() {
    ps -o comm= -p $PPID
}

make_pinentry_output() {
    local password
    password=$(rbw get gpg)
    echo "OK Pleased to meet you"
    echo "D $password"
    echo "OK"
}

check() {
    command_exists rbw && rbw unlock
}

logdir=/tmp/pinentry-custom
mkdir -p $logdir
get_caller >>$logdir/pinentry-caller

if check; then
    # make_pinentry_output 2>&1 
    pinentry "$@"
else
    pinentry "$@"
fi
