#!/usr/bin/env bash

usage="Usage: running_raspberry -- [-h|--help] 

Check if the script is running on a Raspberry Pi.

where:
    -h|--help  show this help text"

while [ "$1" != "" ]; do
    case $1 in
        -h | --help)
            echo "$usage"
            exit
            ;;
        *)
            echo "Error: unknown argument"
            echo "$usage"
            exit 1
            ;;
    esac
    shift
done

if [ -f /proc/device-tree/model ]; then
    grep -q "Raspberry Pi" /proc/device-tree/model
    if [ $? -eq 0 ]; then
        exit 0
    else
        exit 1
    fi
else
    exit 1
fi
