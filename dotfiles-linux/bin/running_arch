#!/usr/bin/env bash

usage="Usage: running_arch -- [-h|--help]

Check if the script is running on an Arch Linux system.

where:
    -h|--help  show this help text"

while [ "$1" != "" ]; do
    case $1 in
        -h | --help)
            echo "$usage"
            exit
            ;;
        *)
            echo "Error: unknown argument"
            echo "$usage"
            exit 1
            ;;
    esac
    shift
done

if [ -f /etc/os-release ]; then
    grep -q "Arch Linux" /etc/os-release
    if [ $? -eq 0 ]; then
        exit 0
    else
        exit 1
    fi
else
    exit 1
fi
