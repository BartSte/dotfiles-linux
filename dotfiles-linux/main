#!/bin/env bash

echo "Installing BartSte/dotfiles-linux repository"

source ~/.dotfiles_config.sh

# Install dependencies first
~/dotfiles-linux/dependencies/main

for script in ~/dotfiles-linux/*/main; do
    if [[ $script == *"dependencies"* ]]; then
        continue
    else 
        echo "Running $script"
        $script
    fi
done

echo "Done"
