#!/usr/bin/env bash

# Ensure rclone is installed
if ! command -v rclone &>/dev/null; then
    echo "rclone is not installed. Please install it and try again."
    exit 1

else
    echo "rclone is installed. Dropbox will be configured. You will need to \
          authenticate your Dropbox account with the browser."
fi

rclone config create dropbox dropbox config_is_local false
