set $mod Mod4

# Window title
# font pango:DejaVu Sans Mono 8
font pango:Jetbrains Mono 10
title_align center
for_window [class="^.*"] border pixel 0
for_window [title="Library"] floating enable

# Move windows
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Layout change
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Workspaces
set $ws1 "Chat"
set $ws2 "Mail"
set $ws3 "Music"
set $ws4 "Web"
set $ws5 "5"
set $ws6 "Term"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

bindsym $mod+m workspace $ws1
bindsym $mod+comma workspace $ws2
bindsym $mod+period workspace $ws3
bindsym $mod+j workspace $ws4
bindsym $mod+k workspace $ws5
bindsym $mod+l workspace $ws6
bindsym $mod+u workspace $ws7
bindsym $mod+i workspace $ws8

bindsym $mod+Shift+m move container to workspace $ws1
bindsym $mod+Shift+comma move container to workspace $ws2
bindsym $mod+Shift+period move container to workspace $ws3
bindsym $mod+Shift+j move container to workspace $ws4
bindsym $mod+Shift+k move container to workspace $ws5
bindsym $mod+Shift+l move container to workspace $ws6
bindsym $mod+Shift+u move container to workspace $ws7
bindsym $mod+Shift+i move container to workspace $ws8

assign [class="Spotify"] workspace $ws3
assign [class="firefox"] workspace $ws4
assign [class="Alacritty"] workspace $ws6

# Commands
bindsym $mod+Shift+s exec scrot -q 100 "~/Screenshots/%Y-%m-%d-%s-screenshot.png"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+r restart
bindsym $mod+space exec rofi -show run -theme gruvbox_custom -font "Jetbrains Mono 10"
bindsym Mod1+F4 kill

bindsym $mod+r mode "resize"
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# customize colors
client.focused          #b8bb26 #b8bb26 #ebdbb2 #b8bb26 #b8bb26
client.focused_inactive #282828 #282828 #ebdbb2 #282828 #282828
client.unfocused        #282828 #282828 #ebdbb2 #282828 #282828
client.urgent           #282828 #282828 #fb4934 #282828 #282828
client.placeholder      #282828 #282828 #ebdbb2 #282828 #282828

# Run commands on startup
exec_always --no-startup-id $HOME/polybar-collection/launch.sh
exec_always --no-startup-id feh --bg-fill "$HOME/Pictures/utrecht-netherlands-utrecht-canals-summer-178fffd1471408b4e663343fedbafb65.jpg"
exec_always --no-startup-id picom -f

