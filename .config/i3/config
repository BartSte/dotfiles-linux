include ~/dotfiles-linux/i3/i3_sway_shared_config

# i3 only
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-

assign [class="Alacritty"] workspace $ws1
assign [class="firefox"] workspace $ws2

for_window [class="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10
for_window [class="^.*"] border pixel 0
for_window [title="Library"] floating enable

exec --no-startup-id $HOME/dotfiles-linux/i3/polybar-collection/launch.sh
exec --no-startup-id feh --bg-fill "$HOME/dotfiles/wallpapers/namibia_dune.jpeg"
exec --no-startup-id picom -f -e 0.8
exec --no-startup-id redshift -l 52.373882:6.891711 -t 6500:2500
exec --no-startup-id /usr/bin/lxsession
