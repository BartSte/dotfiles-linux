#!/usr/bin/bash

left="#[bg=$BG,noreverse]"
right="#[bg=$BG,noreverse]"

values=$(tmux-mem-cpu-load --interval 1 --cpu-mode 0 --mem-mode 2 --graph-lines 0 --averages-count 3)
cpu=$(echo $values|sed 's/^.* //')
memory=$(echo $values|sed 's/ .*$//')
echo "$left#[bg=$WHITE,reverse]CPU:$cpu$right $left#[bg=$WHITE,reverse]MEM:$memory$right"

