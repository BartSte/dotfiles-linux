#!/bin/bash

org=~/Dropbox/Agenda/outlook.org
calendar=outlook_local
start=today
end=90d

khal list \
    --format "* MEETING {title} \n SCHEDULED: <{start-date} {start-time}-{end-time}> \n {location} \n {description}" \
    --day-format "" \
    --include-calendar $calendar \
    $start $end > $org

sed -i "s;\\\n;\n;g" $org

echo "Converted the Khal agenda \"$calendar\" into $org"
